{
  "name": "Github Shortcuts Bar",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Manage a shortcuts bar visible only on Github",
  "default_locale": "en",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.github.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://*.github.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}